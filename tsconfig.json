// tsconfig.json
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node16",
    "baseUrl": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/commands/create/project_template",
    "src/commands/create/project_template_ts"
  ]
}