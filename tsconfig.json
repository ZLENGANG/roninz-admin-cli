// tsconfig.json
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node16",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
